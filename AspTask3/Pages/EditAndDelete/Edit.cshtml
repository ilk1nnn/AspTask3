@page
@model AspTask3.Pages.EditAndDelete.EditModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<head>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>


<div class="container">
	<main role="main" class="pb-3">
		<form class="col-5" method="post">
			<div class="mb-3">
				<label class="form-label">Food Name</label>
				<input asp-for="Food.Name" type="text" class="form-control">
			</div>
			<div class="mb-3">
				<label class="form-label">Food Price</label>
				<input asp-for="Food.Price" type="number" class="form-control">
			</div>

			<button type="submit" asp-page-handler="Edit" class="btn btn-primary">Update</button>
		</form>

	</main>
</div>


